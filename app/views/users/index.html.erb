<% title "Użytkownicy" %>

<table class="systemTable">
  <tr>
    <th>Login</th>
    <th>Email</th>
    
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      

      <td><%= link_to "Zmień", edit_user_path(user) %></td>
      <td><%= link_to "Usuń", user, :confirm => 'Na pewno?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
